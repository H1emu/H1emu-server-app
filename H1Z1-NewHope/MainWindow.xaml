<Window x:Class="H1Z1_server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H1Z1_server"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="H1Z1-NewHope v0.1.0" Height="350" Width="525">
    <Grid  Background="#152951">
        <StackPanel  Margin="0,250,0,0" VerticalAlignment="Center">
            <TextBlock Foreground="White" FontSize="25" Text="H1emu"/>
            <TextBlock Foreground="White" FontSize="10" Text="Join the community at H1emu.com"/>
            <TextBlock Margin="365,0,0,0" Foreground="White" FontSize="9" Text="Copyright (C) 2020  Quentin Gruber"/>
        </StackPanel>
        <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center">
            <Button FontSize="18" Width="160" Height="40" Margin="0,20,0,0" Click="InstallServer_OnClick">Install Servers files</Button>
            <Button FontSize="18" Width="160" Height="40" Margin="0,20,0,0" Click="LaunchServer_OnClick">launch Solo Server</Button>
            <Button FontSize="18" Width="160" Height="40" Margin="0,20,0,0" Click="UpdtServer_OnClick">Update Servers files</Button>
        </StackPanel>
    </Grid>
</Window>